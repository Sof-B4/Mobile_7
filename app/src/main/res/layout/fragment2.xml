<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UI.View.Fragment3"
    android:layout_marginLeft="10dp"
    android:background="@drawable/bg">

    <View
        android:layout_width="wrap_content"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Write some message:"
        android:textStyle="bold"
        android:textColor="@color/deepblue"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/section"
        android:layout_width="259dp"
        android:layout_height="48dp"
        android:layout_gravity="center"

        android:hint="Your message"/>

    <TextView
        android:id="@+id/text_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Here will be your name"
        android:textStyle="italic"
        android:textColor="@color/button_color2"
        android:textColorHint="#3965CD"
        android:textSize="34sp" />





    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Go to fragment 3"
        android:layout_gravity="center"
        android:backgroundTint="@color/sofrpink" />
    <!--        android:onClick="onButtonClick2"-->

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Save data"
        android:layout_gravity="center"
        android:backgroundTint="@color/button_color" />

    <Button
        android:id="@+id/button_end2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Go back"
        android:layout_gravity="center"
        android:backgroundTint="@color/deepblue"
        android:onClick="onButtonClick_end2"
        />




</LinearLayout>



